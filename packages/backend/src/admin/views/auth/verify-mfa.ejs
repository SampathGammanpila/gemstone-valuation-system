<!-- packages/backend/src/admin/views/auth/verify-mfa.ejs -->
<%- contentFor('title') %>Verify MFA

<%- contentFor('content') %>
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Verification Required
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Please enter the verification code from your authenticator app
      </p>
    </div>

    <% if (locals.messages && messages.error) { %>
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
        <p><%= messages.error %></p>
      </div>
    <% } %>

    <form class="mt-8 space-y-6" action="/admin/verify-mfa" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="rounded-md -space-y-px">
        <div class="mb-4">
          <label for="verificationCode" class="block text-sm font-medium text-gray-700 mb-1">Verification Code</label>
          <input id="verificationCode" name="verificationCode" type="text" autocomplete="one-time-code" required 
                class="appearance-none relative block w-full px-3 py-2 border border-gray-300 
                      placeholder-gray-500 text-gray-900 rounded-md 
                      focus:outline-none focus:ring-primary-500 focus:border-primary-500 focus:z-10 sm:text-sm"
                placeholder="Enter 6-digit code from your authenticator app">
        </div>
      </div>

      <div>
        <button type="submit" 
              class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium 
                    rounded-md text-white bg-primary-600 hover:bg-primary-700 
                    focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
          Verify
        </button>
      </div>
    </form>
  </div>
</div>